{{# beachcourt }}
	<div class="beachcourt-summary {{ styleModifier }}" >
		<img src="{{ image }}" class="beachcourt-summary__image">

		<div class="beachcourt-summary__overlay">
			<span class="beachcourt-summary__icon icon icon--heart-o"></span>
			<h3 class="beachcourt-summary__title">{{ name }}</h3>

			<!-- <hr class="divider beachcourt-summary__divider" /> -->

			<div class="beachcourt-summary__location">
				<span class="beachcourt-summary__icon-location icon icon--map-marker"></span>
				<span class="beachcourt-summary__coordinate">{{ longitude }} <br> {{ latitude }}</span>
			</div>
		</div>

	</div>
{{/ beachcourt }}
