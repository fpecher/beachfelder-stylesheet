<label class="checkbox-switch {{ styleModifier }}">
  <input class="checkbox-switch__field"
         type="checkbox"
         name="{{checkbox-switch_name}}"
         value="{{checkbox-switch_value}}"
         {{# checkbox-switch_checked }} checked="checked" {{/ checkbox-switch_checked }}
         >
  {{# checkbox-switch_label }}
  	<span class="checkbox-switch__label">{{ checkbox-switch_label }} </span>
  {{/ checkbox-switch_label }}
</label>
