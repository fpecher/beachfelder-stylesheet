<div class="context-menu {{ styleModifier }}">
	<ul class="context-menu__list">
		{{# context-menu_items }}
			<li class="context-menu__item">
				<a href="#" class="context-menu__link">
					<span class="context-menu__icon icon icon--{{ icon }}"></span>
					<span class="context-menu__title"> {{ name }}</span>
				</a>
			</li>
		{{/ context-menu_items }}
	</ul>
	{{# context-menu_button }}
		{{> molecules-button:context-menu__button(button_label: "Button Label", button_icon: "sign-out", button_backgroundColor: "red") }}
	{{/ context-menu_button }}
</div>
